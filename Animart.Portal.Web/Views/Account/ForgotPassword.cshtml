@using Abp.Extensions
@model Animart.Portal.Web.Models.ForgotPasswordViewModel
<div class="container entrance-container">
    <div id="LoginArea" class="row">
        <div class="col-lg-12">
            @*@Html.Partial("_EntranceLogo")*@
            <div class="well bs-component">
                <form class="form-horizontal" action="@(Url.Action("ForgotPassword", "Account"))" method="POST">
                    <fieldset>
                        <legend>@L("ForgotPassword")</legend>
                        @if (@ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="email" class="form-control" name="EmailAddress" value="@Model.EmailAddress" placeholder="@L("EmailAddress")" required maxlength="@Animart.Portal.Users.User.MaxEmailAddressLength">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" id="ForgotPasswordButton" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("ForgotPassword")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>