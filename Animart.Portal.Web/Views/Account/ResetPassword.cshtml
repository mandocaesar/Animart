@using Abp.Extensions
@model Animart.Portal.Web.Models.ResetPasswordViewModel
<div class="container entrance-container">
    <div id="LoginArea" class="row">
        <div class="col-lg-12">
            @*@Html.Partial("_EntranceLogo")*@
            <div class="well bs-component">
                <form class="form-horizontal" action="@(Url.Action("ResetPassword", "Account"))" method="POST">
                    <fieldset>
                        <legend>@L("ResetPassword")</legend>
                        @if (@ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                            </div>
                        }

                        <input type="hidden" name="ResetCode" value="@Model.ResetCode.ToString()" />
                        <input type="hidden" name="UserId" value="@Model.UserId" />
                        <input type="hidden" name="EmailAddress" value="@Model.EmailAddress.ToString()" />
                        @*<div class="form-group">
                            <div class="col-lg-12">
                                <input type="email" class="form-control" name="EmailAddress" value="@Model.EmailAddress" placeholder="@L("EmailAddress")" required maxlength="@Animart.Portal.Users.User.MaxEmailAddressLength">
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" name="Password" placeholder="@L("Password")" required maxlength="@Animart.Portal.Users.User.MaxPlainPasswordLength">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" name="ConfirmPassword" placeholder="@L("ConfirmPassword")" required maxlength="@Animart.Portal.Users.User.MaxPlainPasswordLength">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" id="ForgotPasswordButton" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("ResetPassword")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>