            <md-card style="text-align: center;">
                @*ng-if="supply.inStock>0"*@
                <md-card-title>
                    <md-card-title-text>
                        <span class="md-head" style="font-weight: bold; word-wrap: break-word; width: 150px; height: 50px;">{{supply.name | limitTo:100}}</span>
                        @*<span class="md-subhead">{{supply.price | currency:"Rp."}}</span>*@
