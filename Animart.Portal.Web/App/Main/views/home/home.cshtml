<div ng-controller="app.views.home as vm">
    <h2>Latest Pre-Order</h2><hr/>
    <label>Search:</label><input ng-model="searchPO" id="search" class="form-control" placeholder="Filter text">

    <md-content class="md-padding" layout-xs="column" layout="row">
        <div pagination-id="paginatePO" dir-paginate="posupply in poSupplies | filter:searchPO | itemsPerPage: pagePOSize" current-page="currentPOPage" flex-xs flex-gt-xs="16" flex="none" layout="row">
            @*ng-repeat="posupply in filteredPOSupplies"*@
            <md-card style="text-align: center;">
                <md-card-title>
                    <md-card-title-text>
                        <span class="md-head" style="font-weight: bold; word-wrap: break-word; width: 150px; height: 50px;">{{posupply.name | limitTo:30}}</span>
                        @*<span class="md-subhead">{{posupply.price | currency:"Rp."}}</span>*@
                        <span class="md-subhead">
                            <b>Available Until:</b>
                            <br/>{{posupply.availableUntil| date: "dd-MMMM-yyyy, HH:mma"}}
                        </span>
