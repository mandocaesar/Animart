<div ng-controller="expeditionController as vm">
    <div class="row">
        <div class="col-lg-2">
            <button type="button" class="btn btn-primary" ng-click="open()"> <i class="fa fa-pencil"></i> Add New Expedition</button>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-danger " ng-click="delete()"><i class="fa fa-trash"></i>Delete Expeditio</button>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="col-lg-12">
            <div ui-grid="gridOptions" ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-selection class="myGrid"></div>
        </div>
    </div>
    <script type="text/ng-template" id="addNewExpedition.html">
        <div class="modal-header">
            <h3 class="modal-title">Add New User Item</h3>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Expedition Name:</label>
                <input type="text" ng-model="shipmentItem.Expedition" class="form-control">
            </div>
            <div class="form-group">
                <label>Type:</label>
                <input type="text" ng-model="shipmentItem.Type" min="0" class="form-control">
            </div>
            <div class="form-group">
                <label>First5Kilo</label>
                <input type="number" ng-model="shipmentItem.First5Kilo"  min="0" class="form-control">
            </div>
            <div class="form-group">
                <label>Next Kilo:</label>
                <input type="number" min="0" ng-model="shipmentItem.NextKilo" class="form-control">
            </div>
            <div class="form-group">
                <label>City:</label>
                <select ng-model="shipmentItem.City" ng-options="city.id as city.name for city in cities"></select>

            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Save</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>