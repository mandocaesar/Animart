<div ng-controller="app.views.cities as vm">
    <div class="row">
        <div class="col-lg-2">
            <button type="button" class="btn btn-primary" ng-click="open()"> <i class="fa fa-pencil"></i> Add New City</button>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-danger " ng-click="delete()"><i class="fa fa-trash"></i>Delete City</button>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="col-lg-12">
            <div ui-grid="gridOptions" ui-grid-resize-columns ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-selection class="myGrid"></div>
        </div>
    </div>
    <script type="text/ng-template" id="addNewCity.html">
        <div class="modal-header">
            <h3 class="modal-title">Add New City</h3>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>City Name :</label>
                <input type="text" ng-model="city.name" class="form-control">
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Save</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>