<div ng-controller="app.views.category as vm">
    <div class="row">
        <div class="col-lg-2">
            <button type="button" class="btn btn-primary" ng-click="open()"> <i class="fa fa-pencil"></i> Add New Category</button>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-danger " ng-click="delete()"><i class="fa fa-trash"></i>Delete Category</button>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="col-lg-12">
            <div ui-grid="gridOptions" ui-grid-resize-columns ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-selection class="myGrid"></div>
        </div>
    </div>

    <script type="text/ng-template" id="addNewCategory.html">
        <div class="modal-header">
            <h3 class="modal-title">{{title}} Category</h3>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" ng-model="category.name" class="form-control">
            </div>
            <div class="form-group">
                <label>Parent Category:</label>
                <select ng-model="category.parentId" ng-options="item.id as item.name for item in parent"></select>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()" ng-hide="IsEdit">Save</button>
            <button class="btn btn-primary" type="button" ng-click="update()" ng-show="IsEdit">Update</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>